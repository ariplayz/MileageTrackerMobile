<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:MileageTrackerMobile"
             x:Class="MileageTrackerMobile.App"
             RequestedThemeVariant="Default">
             <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->

    <Application.DataTemplates>
        <local:ViewLocator/>
    </Application.DataTemplates>

    <Application.Styles>
        <FluentTheme />
        <StyleInclude Source="/AppDefaultStyles.axaml"></StyleInclude>
    </Application.Styles>

    <Application.Resources>
        <SolidColorBrush x:Key="PrimaryForeground">#020817</SolidColorBrush>
        <LinearGradientBrush x:Key="PrimaryBackground" StartPoint="50%,0%" EndPoint="50%,100%">
            <GradientStop Color="#003c64" Offset="0.0"/>
            <GradientStop Color="#000e26" Offset="1.0"/>
        </LinearGradientBrush>
        
        <!-- Liquid Glass - Much more translucent (30-50% opacity) -->
        <LinearGradientBrush x:Key="GreyGradientBrush" StartPoint="0%, 0%" EndPoint="100%, 100%">
            <GradientStop Offset="0" Color="#4DCCCCCC"></GradientStop>
            <GradientStop Offset="0.3" Color="#66BEBEBE"></GradientStop>
            <GradientStop Offset="0.7" Color="#66B8B8B8"></GradientStop>
            <GradientStop Offset="1" Color="#4DC0C0C0"></GradientStop>
        </LinearGradientBrush>

        <!-- Liquid glass border with prominent shimmer -->
        <LinearGradientBrush x:Key="GreyBorderGradientBrush" StartPoint="0%, 0%" EndPoint="100%, 100%">
            <GradientStop Color="#B3FFFFFF" Offset="0.0"/>
            <GradientStop Color="#80F8F8F8" Offset="0.15"/>
            <GradientStop Color="#4DE0E0E0" Offset="0.35"/>
            <GradientStop Color="#33D8D8D8" Offset="0.5"/>
            <GradientStop Color="#4DE5E5E5" Offset="0.65"/>
            <GradientStop Color="#80F0F0F0" Offset="0.85"/>
            <GradientStop Color="#B3FFFFFF" Offset="1.0"/>
        </LinearGradientBrush>
        
        <!-- Inner glow for extra depth on edges -->
        <LinearGradientBrush x:Key="InnerGlowBrush" StartPoint="50%, 50%" EndPoint="50%, 100%">
            <GradientStop Color="#4DFFFFFF" Offset="0.0"/>
            <GradientStop Color="#26FFFFFF" Offset="0.3"/>
            <GradientStop Color="#00FFFFFF" Offset="1.0"/>
        </LinearGradientBrush>

        <!-- Ultra translucent option (20-40% opacity) -->
        <LinearGradientBrush x:Key="DarkGlassBrush" StartPoint="0%, 0%" EndPoint="100%, 100%">
            <GradientStop Offset="0" Color="#33B0B0B0"></GradientStop>
            <GradientStop Offset="0.5" Color="#4DA8A8A8"></GradientStop>
            <GradientStop Offset="1" Color="#33AAAAAA"></GradientStop>
        </LinearGradientBrush>

        <!-- Lighter frosted option (40-50% opacity) -->
        <LinearGradientBrush x:Key="FrostedGlassBrush" StartPoint="0%, 0%" EndPoint="100%, 100%">
            <GradientStop Offset="0" Color="#66D8D8D8"></GradientStop>
            <GradientStop Offset="0.5" Color="#80CCCCCC"></GradientStop>
            <GradientStop Offset="1" Color="#66D0D0D0"></GradientStop>
        </LinearGradientBrush>

        <!-- Subtle reflection overlay (10-20% opacity) -->
        <LinearGradientBrush x:Key="GlassReflectionBrush" StartPoint="0%, 0%" EndPoint="0%, 100%">
            <GradientStop Offset="0" Color="#26FFFFFF"></GradientStop>
            <GradientStop Offset="0.3" Color="#0DFFFFFF"></GradientStop>
            <GradientStop Offset="1" Color="#00FFFFFF"></GradientStop>
        </LinearGradientBrush>
        
        <SolidColorBrush x:Key="PrimaryHoverBackground">#041132</SolidColorBrush>
        <SolidColorBrush x:Key="PrimaryHoverForeground">White</SolidColorBrush>
        <SolidColorBrush x:Key="SecondaryForeground">#6ea3b8</SolidColorBrush>
        
        <FontFamily x:Key="AkkoPro">/Assets/Fonts/Akko-Pro-Regular.ttf#Akko Pro</FontFamily>
        <FontFamily x:Key="AkkoProBold">/Assets/Fonts/Akko-Pro-Bold.ttf#Akko Pro</FontFamily>
        <FontFamily x:Key="Phosphor">/Assets/Fonts/Phosphor.ttf#Phosphor</FontFamily>
        <FontFamily x:Key="PhosphorFill">/Assets/Fonts/Phosphor-Fill.ttf#Phosphor-Fill</FontFamily>
        <FontFamily x:Key="JetBrainsMono">/Assets/Fonts/JetBrainsMono-Regular.ttf#JetBrains Mono</FontFamily>
        
    </Application.Resources>
</Application>

<!-- 
OPACITY REFERENCE (first 2 hex digits):
#4D = 30% opacity (very translucent)
#66 = 40% opacity (translucent)
#80 = 50% opacity (medium)
#99 = 60% opacity (semi-transparent)
#B3 = 70% opacity (less transparent)

CURRENT SETTINGS:
- GreyGradientBrush: 30-40% opacity (very see-through)
- GreyBorderGradientBrush: 15-30% opacity (barely visible shimmer)
- DarkGlassBrush: 20-30% (ultra translucent)
- FrostedGlassBrush: 40-50% (medium translucent)
- GlassReflectionBrush: 5-15% (very subtle)

TO ADJUST:
- Less transparent: increase hex values (66→80→99→B3)
- More transparent: decrease hex values (4D→33→26→1A)
-->